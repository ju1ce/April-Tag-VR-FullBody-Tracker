# Our subprojects
[submodule "BridgeDriver"]
	path = BridgeDriver
	url = https://github.com/funnbot/OpenVR-Bridge-Driver
	branch = AprilTagTrackers

# dependencies, shallow checkout and ignore = dirty means only changes to commit hash will be tracked
[submodule "deps/apriltag"]
	path = deps/apriltag
	url = https://github.com/funnbot/apriltag
	shallow = true
	ignore = dirty
[submodule "deps/wxWidgets"]
	path = deps/wxWidgets
	url = https://github.com/wxWidgets/wxWidgets
	shallow = true
	ignore = dirty
[submodule "deps/openvr"]
	path = deps/openvr
	url = https://github.com/funnbot/openvr
	shallow = true
	ignore = dirty
[submodule "deps/opencv"]
	path = deps/opencv
	url = https://github.com/opencv/opencv
	shallow = true
	ignore = dirty
[submodule "deps/opencv_contrib"]
	path = deps/opencv_contrib
	url = https://github.com/opencv/opencv_contrib
	shallow = true
	ignore = dirty
[submodule "deps/linalg"]
	path = deps/linalg
	url = https://github.com/sgorsten/linalg
	shallow = true
	ignore = dirty
